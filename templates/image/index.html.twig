{# templates/index.html.twig #}
<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <title>Image Fetcher</title>
{#    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">#}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container mt-5">
    <h1>Image Fetcher</h1>
    <form method="post" class="form-inline mb-4">
        <div class="form-group mr-2">
            <input type="text" name="url" class="form-control" placeholder="Enter URL" required>
        </div>
        <button type="submit" class="btn btn-primary">Go</button>
    </form>
    {% if images is defined %}
        <div class="row">
            {% for image in images %}
                <div class="col-md-3 mb-4">
                    <img src="{{ image.src }}" class="img-fluid" alt="Image">
                </div>
            {% endfor %}
        </div>
        <div class="mt-4">
            <p>На странице обнаружено {{ images|length }} изображений на {{ totalSize / (1024 * 1024) }} Мб</p>
        </div>
    {% endif %}
</div>
</body>
</html>
